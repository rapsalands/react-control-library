{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "outDir": "./react-control-library",
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [
            "index.d.ts",
            "node_modules/@types"
        ]
    },
    "include": [
        "./**/*.tsx",
        "./**/*.ts", "../regex.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
